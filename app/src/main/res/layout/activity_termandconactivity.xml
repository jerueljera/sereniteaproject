<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".termandconactivity"
    android:background="@color/simplebackgroundcolor2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="410dp"
        android:layout_height="800dp">

        <TextView
            android:id="@+id/backtermandcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="750dp"
            android:layout_marginRight="300dp"
            android:background="@drawable/baseline_arrow_back_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="Term and Condition"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="580dp"
            android:layout_marginRight="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView189"
            android:layout_width="350dp"
            android:layout_height="140dp"
            android:layout_marginBottom="400dp"
            android:text="SereniTea's Terms and Conditions outline the rules for using their website, including intellectual property rights, user restrictions, indemnification, and governing law. By accessing their website, users agree to these terms."
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="Privacy Policy"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="220dp"
            android:layout_marginRight="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:text="SereniTea's Privacy Policy details how they collect, use, and protect personal information. They collect personal data such as names, addresses, and email addresses during transactions. This information is used to process orders, verify credit cards, arrange deliveries, and send marketing emails. Users can withdraw consent for marketing emails at any time."
            android:textSize="18sp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="Summary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="180dp"
            android:layout_marginRight="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:text="SereniTea’s terms and conditions establish a legal agreement between the company and customers. Users must accept the terms and be of legal age to use the site. The company prohibits illegal activities and unauthorized access to protect the platform’s integrity. SereniTea can change or discontinue services, pricing, or product availability at any time. Customers are responsible for securing their account information. The return policy allows refunds within a set period if the product is in its original condition. These terms ensure a fair experience for both parties."
            android:textSize="18sp"
            android:layout_marginTop="570dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
